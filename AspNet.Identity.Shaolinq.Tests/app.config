<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="TestDataAccessModel" type="Shaolinq.DataAccessModelConfigurationSectionHandler, Shaolinq" />
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>

	<TestDataAccessModel>
		<SqlDatabaseContexts>
			<Sqlite FileName=":memory:" />
		</SqlDatabaseContexts>
		<NamingTransforms DataAccessObjectName="s/Db(.*)/$1/" />
	</TestDataAccessModel>

	<log4net>
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%utcdate{HH:mm:ss,fff} [%-5level] [%thread] %logger: %message%newline" />
			</layout>
		</appender>
		<root>
			<level value="DEBUG" />
			<appender-ref ref="ConsoleAppender" />
		</root>
		<logger name="Shaolinq">
			<level value="DEBUG" />
		</logger>
	</log4net>

	<runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Data.SQLite" publicKeyToken="db937bc2d44ff139" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-1.0.101.0" newVersion="1.0.101.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>